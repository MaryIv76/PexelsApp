<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HintStyle">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleInactiveStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleActiveStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStubStyle">
        <item name="android:textColor">@color/dark_dark_gray</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopBarTextStyle">
        <item name="android:textColor">@color/dark_dark_gray</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnStubStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnDownloadStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedSquarePhoto">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Theme.PexelsApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.PexelsApp</item>
    </style>
</resources>